<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="4dp"
    android:background="@color/white"
    android:id="@+id/recipeItemContainer">

    <ImageView
        android:id="@+id/item_recipe_image"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_recipe_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:gravity="start|center"
        android:maxWidth="180dp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@id/item_recipe_description"
        app:layout_constraintLeft_toRightOf="@id/item_recipe_image"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_recipe_cooking_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:gravity="start|center"
        android:textColor="@color/grey"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@id/item_recipe_description"
        app:layout_constraintLeft_toRightOf="@id/item_recipe_name"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_recipe_rating"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:drawablePadding="2dp"
        android:gravity="end|center"
        android:textColor="@color/black"
        app:drawableEndCompat="@drawable/star_rate"
        android:textSize="20sp"
        android:scaleX="0.7"
        android:scaleY="0.7"
        app:layout_constraintBottom_toTopOf="@id/item_recipe_description"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_recipe_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColor="@color/grey"
        android:textSize="12sp"
        app:layout_constrainedWidth="true"
        app:layout_constraintLeft_toRightOf="@id/item_recipe_image"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_recipe_cooking_time" />

    <TextView
        android:id="@+id/itemRecipeAuthorName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@color/grey"
        android:textSize="10sp"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toTopOf="@id/recipeDivider"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_recipe_description" />

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/recipeDivider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:dividerInsetStart="16dp"
        app:dividerInsetEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/item_recipe_image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>